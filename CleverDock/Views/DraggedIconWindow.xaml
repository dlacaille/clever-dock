<Window x:Class="CleverDock.DraggedIconWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1"
        Height="{Binding Main.IconSize, Source={StaticResource Locator}}"
        Width="{Binding Main.IconSize, Source={StaticResource Locator}}"
        Topmost="True"
        WindowStyle="None" AllowsTransparency="True" HorizontalAlignment="Center" VerticalAlignment="Center"
        Background="Transparent">
    <Grid>
        <Image Source="{Binding Icon}" />
    </Grid>
</Window>